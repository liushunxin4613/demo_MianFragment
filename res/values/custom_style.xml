<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- actionbar的字体 -->
    <style name="actionbar_title_textstyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- 大号的黑色字体 -->
    <style name="big_black_textstyle">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 中号的黑色字体 -->
    <style name="mid_black_textstyle">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 小号的黑色字体 -->
    <style name="small_black_textstyle">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 大号的蓝色字体 -->
    <style name="big_blue_textstyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>
    <!-- 中号的蓝色字体 -->
    <style name="mid_blue_textstyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>
    <!-- 小号的蓝色字体 -->
    <style name="small_blue_textstyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <!-- 大号的灰色字体 -->
    <style name="big_gray_textstyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <!-- 中号的灰色字体 -->
    <style name="mid_gray_textstyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <!-- 小号的灰色字体 -->
    <style name="small_gray_textstyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <!-- 大号的白色字体 -->
    <style name="big_white_textstyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 中号的白色字体 -->
    <style name="mid_white_textstyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 对话框的白色标题字体 -->
    <style name="dialog_white_textstyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 对话框的黑色标题字体 -->
    <style name="dialog_black_textstyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 小号的白色字体 -->
    <style name="small_white_textstyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 兼职或物品详情标题 -->
    <style name="detail_title_textstyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 兼职或物品详情价格 -->
    <style name="detail_price_textstyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_red_price</item>
    </style>

    <!-- 兼职或物品详情标题 -->
    <style name="detail_text_titlestyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 兼职或物品详情正文 -->
    <style name="detail_content_textstyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 兼职或物品详情分割线风格 -->
    <style name="detail_line_style">
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <!-- 普通列表的item风格 -->
    <style name="item_style">
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="item_text_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@drawable/ic_launcher</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 普通列表项的分割线风格 -->
    <style name="item_line_style">
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_marginLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:layout_marginRight">?android:attr/listPreferredItemPaddingRight</item>
    </style>

    <!-- 编辑列表项的分割线风格 -->
    <style name="item_line_edit_style">
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <style name="text_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="item_more_image_style">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:background">@drawable/ic_launcher</item>
    </style>

    <!-- 普通列表分割线风格 -->
    <style name="item_line_style_vertical">
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_marginLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:layout_marginRight">?android:attr/listPreferredItemPaddingRight</item>
        <item name="android:layout_marginTop">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:layout_marginBottom">?android:attr/listPreferredItemPaddingRight</item>
    </style>

    <!-- 有图标的item风格 -->
    <style name="item_with_icon_style">
        <item name="android:paddingLeft">@dimen/container_padding_large</item>
        <item name="android:paddingRight">@dimen/container_padding_large</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ic_launcher</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="edit_input_style">
        <item name="android:background">@drawable/ic_launcher</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="textview_input_style">
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="publish_editText_style">
        <item name="android:background">@drawable/publish_edit_bg_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="publish_item_title_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="publish_item_dialog_style">
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <!-- 从此处开始编辑  -->
    
    <style name="activity_login_linear_v">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <style name="activity_login_linear_h">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>